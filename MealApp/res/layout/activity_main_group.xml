<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toplayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llayoutBottom"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_title_height"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnModule1"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@color/no_sel"
            android:text="首页"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnModule2"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@color/sel"
            android:text="订单"
            android:textColor="@color/white"
            android:textSize="16sp" />
       <Button
            android:id="@+id/btnModule3"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@color/sel"
            android:text="个人"
            android:textColor="@color/white"
            android:textSize="16sp" />
      
        


    </LinearLayout>

    <FrameLayout
        android:id="@+id/containerBody"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/llayoutBottom" >
    </FrameLayout>

</RelativeLayout>